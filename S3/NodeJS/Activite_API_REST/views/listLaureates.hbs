<div class="container" id="listeLaureats" style="display: flex;flex-direction: column">
    <h1>Liste des lauréats</h1>
    <div class="col-12">
        <div class="d-inline">
        </div>
        <table class="table table-striped table-responsive table-bordered" style="text-align: center">
            {{#if laureates}}
                <thead class="th">
                <tr style="font-size: 20px;">
                    <th class="id">#</th>
                    <th class="surname">Nom</th>
                    <th class="firstname">Prénom</th>
                </tr>
                </thead>
                <tbody>
                {{#each laureates}}
                    <tr>
                        <td class="id">{{this.id}}</td>
                        <td class="surname">{{this.surname}}</td>
                        <td class="firstname">{{this.firstname}}</td>
                    </tr>
                {{/each}}
                </tbody>
            {{else}}
                <thead>
                <tr style="font-size: 20px;">
                    <th>ID non trouvé</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Nous n'avons pas trouvé ce que vous cherchez...</td>
                    </tr>
                </tbody>
            {{/if}}
        </table>
    </div>
</div>

