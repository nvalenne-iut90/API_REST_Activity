<div class="container">
    <form action="/views/view2" method="POST">
    <div class="row">
        <div class="col-3">
            <select name="categorie" class="form-select mb-3">
                <option value="notToUse" selected disabled style="font-style: italic">Choisir une catégorie</option>
                {{#each categories}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-9">
        <div style="display: flex;flex-direction:column">
            <label for="year">Année</label>
            <input name="year">
            <label for="firstname">Prénom</label>
            <input name="firstname">
            <label for="surname">Nom</label>
            <input name="surname">
            <label for="motivation">Motivation</label>
            <input name="motivation">
            <button type="submit" class="btn bg-success m-4" style="color:white">Créer le nouveau lauréat</button>
        </div>
    </div>
    </div>
    </form>
</div>